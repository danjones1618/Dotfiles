bar {
        status_command py3status -c ~/.config/i3/i3status.conf
       #status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top

	colors {
                #Colours in format of <border> <background> <text> <indicator> <child_border>
		background #4d4d4d
		statusline #ffffff
		separator #ffffff
		focused_workspace	#d3a4f9 #d3a4f9 #ffffff
		inactive_workspace      #4d4d4d #4d4d4d #d3a4f9	
		urgent_workspace	#fda333 #fda333 #ffffff
		
                #background #473838
		#statusline #44c7f2
		#separator #757575
		#focused_workspace	#b32571 #b32571 #44c7f2
		#inactive_workspace      #473838 #473838 #44c7f2	
		#urgent_workspace	#f26f44 #f26f44 #44c7f2
	}
}
